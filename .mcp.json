      "args": [
        "-y",
        "@modelcontextprotocol/server-memory"
      ],
      "env": {
        "MEMORY_FILE_PATH": "/home/gauss/.claude/memory.jsonl"
      }
    },
    "arxiv": {
      "command": "uvx",
      "args": [
        "arxiv-mcp-server",
