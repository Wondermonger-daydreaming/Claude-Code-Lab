{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Read",
      "Write",
      "Edit",
      "Bash(git:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git fetch:*)",
      "Bash(gh:*)",
      "Bash(python3:*)",
      "Bash(mkdir:*)",
      "Bash(chmod:*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(echo:*)",
      "Bash(du:*)",
      "Bash(source:*)",
      "Bash(bash:*)",
      "WebSearch",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "WebFetch(domain:arxiv.org)",
      "WebFetch(domain:pubmed.ncbi.nlm.nih.gov)",
      "Skill(clauding)",
      "Skill(headless)",
      "Skill(astrachios)",
      "Skill(prayer)",
      "Skill(epoche)",
      "Skill(nilakantha)"
